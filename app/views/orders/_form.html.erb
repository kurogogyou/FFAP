<% user = current_user %>
  <div class="field">
    <%= hidden_field_tag 'order[name]', user.username %>
  </div>
<div class="field">
    <%= hidden_field_tag 'order[address]', user.address %>
  </div>
  <div class="field">
    <%= hidden_field_tag 'order[email]', user.email %>
  </div>
  <div class="field">
    <%= hidden_field_tag 'order[user_id]', user.id %>
  </div>
  <div class="actions">
    <%= f.submit "Place order" %>
  </div>
<% end %>
