<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% user = current_user %>
  <div class="field">
    <%= hidden_field_tag 'order[name]', user.username %>
  </div>
<div class="field">
    <%= hidden_field_tag 'order[address]', user.address %>
  </div>
  <div class="field">
    <%= hidden_field_tag 'order[email]', user.email %>
  </div>
  <div class="field">
    <%= hidden_field_tag 'order[user_id]', user.id %>
  </div>
  <div class="confirmation">
    <ul>
      <% @cart.line_items.each do |line_item| %>
      <li> <%= line_item.product.title %>, <%= line_item.product.brand.brand_name %> <%= line_item.product.vehicle_model.model_name %>, <%= line_item.product.vehicle_model.year %></li>
      <% end %>
    </ul>
    <p>Total Price: <%= @cart.total_price %></p>
  </div>
  <div class="actions">
    <%= f.submit "", :type => :image, :src => "https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif" %>
  </div>
<% end %>
