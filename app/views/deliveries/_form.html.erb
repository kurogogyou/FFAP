<%= form_for(@delivery) do |f| %>
  <% if @delivery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@delivery.errors.count, "error") %> prohibited this delivery from being saved:</h2>

      <ul>
      <% @delivery.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, delivery_users, prompt: 'Select delivery user' %>
  </div>
  <% begin %>
    <% if order %>
    <div class="field">
      <%= hidden_field_tag 'delivery[order_id]', order.id %>
    </div>
    <div class="actions">
      <%= f.submit "Assign Delivery" %>
    </div>
    <% end %>
  <% rescue NameError %>
    <div class="field">
      <%= f.label :order_id %><br>
      <%= f.text_field :order_id %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% end %>
