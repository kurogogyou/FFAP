<h1>Registered vehicles</h1>
<% if !@vehicles.empty? %>
<table>
  <thead>
    <tr>
      <th>Chassis number</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.chassis_number %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Remove', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
<p> No vehicles registered.</p>
<% end %>

<%= link_to 'Register New Vehicle', new_vehicle_path %>
