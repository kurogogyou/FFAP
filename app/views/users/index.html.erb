<h2 class="head">Listing users</h2>

<table class="table">
  <thead>
    <tr>
      <th class="bold">Username</th>
      <th class="bold">Names</th>
      <th class="bold">Lastnames</th>
      <th class="bold">Email</th>
      <th class="bold">Address</th>
      <th class="bold">Phone</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.names %></td>
        <td><%= user.last_names %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-default' %>
