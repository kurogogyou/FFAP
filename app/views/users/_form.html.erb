<div class="depot_form">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-6">
    <div class="field form-group">
      <%= f.label :username, class: 'control-label' %>
      <%= f.text_field :username, class: 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :phone%>
      <%= f.text_field :phone, class: 'form-control'%>
    </div>
    <div class="field form-group">
      <%= f.label :email%>
      <%= f.text_field :email, class: 'form-control'%>
    </div>
    <div class="field form-group">
      <%= f.label :names%>
      <%= f.text_field :names, class: 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :last_names%>
      <%= f.text_field :last_names, class: 'form-control'%>
    </div>
    <div class="field form-group">
      <%= f.label :address%>
      <%= f.text_area :address, rows: 3, cols: 50, class: 'form-control'%>
    </div>
    <div class="field form-group">
      <%= f.label :password%>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :password_confirmation%>
      <%= f.password_field :password_confirmation, class: 'form-control'%>
    </div>
    <% if current_user %>
      <% if current_user.role == "admin" %>
      <p style="padding-top: 0.1em"> </p>
        <div class="field">
          <%= f.label :role%>
          <%= f.select :role, options_for_select(role_list), {}, {prompt: "Select Role for User", class: 'form-control'} %>
        </div>
      <% elsif current_user.role == "seller" %>
        <div class="field">
          <%= hidden_field_tag 'user[role]', "seller" %>
        </div>
      <% end %>
    <% end %>
    <% if params[:srole] %>
      <div class="field">
        <%= hidden_field_tag 'user[role]', "seller" %>
      </div>
    <%else%>
      </div>

      <div class="col-sm-6">
        <p>Please select your location on map</p>
         <div id="mapa"></div>
        <% end %>
        <div class="field">
          <%= hidden_field_tag :latitude %>
        </div>
        <div class="field">
          <%= hidden_field_tag :longitude %>
        </div>
      </div>

      <div class="clearfix"></div>
      <div class="actions form-group">
        <%= f.submit "Save", class: 'btn add-margin' %>
      </div>

    <% end %>

</div>
