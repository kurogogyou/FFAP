<div class="depot_form">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Enter User Details</legend>
  
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :names %><br>
    <%= f.text_field :names %>
  </div>
  <div class="field">
    <%= f.label :last_names %><br>
    <%= f.text_field :last_names %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address, rows: 3, cols: 50 %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <% if current_user %>
    <% if current_user.role == "admin" %>
    <p style="padding-top: 0.1em"> </p>
      <div class="field">
        <%= f.label :role %><br>
        <%= f.select :role, options_for_select(role_list), prompt: "Select Role for User" %>
      </div>
    <% elsif current_user.role == "seller" %>
      <div class="field">
        <%= hidden_field_tag 'user[role]', "seller" %>
      </div>
    <% end %>
  <% end %>
  <% if params[:srole] %>
    <div class="field">
      <%= hidden_field_tag 'user[role]', "seller" %>
    </div>
  <% end %>
  <p>Please select your location on map</p>
   <div id="mapa"></div>
  <div class="field">
    <%= hidden_field_tag :latitude %>
  </div>
  <div class="field">
    <%= hidden_field_tag :longitude %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  </fieldset>

<% end %>

</div>
