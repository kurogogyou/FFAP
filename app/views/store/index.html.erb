<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class="sform">
  <%= render 'form' %>
</div>
<h1> Catalog </h1>
<% cache ['store', Product.latest] do %>
  <% @products.each do |product| %>
    <% cache ['entry', product] do %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <h3><%= link_to product.title, product %></h3>
        <div class="desc">
          <li><%= product.description %></li>
  	      <strong>Model: </strong><%= product.brand.brand_name + " " + product.vehicle_model.model_name + " " + product.vehicle_model.year.to_s %>
          <% if product.in_stock? %>
            <li>In Stock</li>
          <% else %>
            <li>Out of Stock</li>
          <% end %>
          
        </div>
        <div class="price_line">
          <span class="price">
          <% if product.in_stock? %>
            <%= "From " + number_to_currency(lowest_priced(product.stocks).price) %>
          <% else %>
            <%= "Unavailable" %>
          <% end %>
          </span>
          <% if current_user %>
          <%= button_to 'Add to Cart', line_items_path(product_id: product,
           stock_id: lowest_priced(product.stocks)), remote: true, :disabled => !product.in_stock? %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>