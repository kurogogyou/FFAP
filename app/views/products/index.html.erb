<h1>Listing products</h1>

<table>
  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
        <td> <%= image_tag(product.image_url, class: 'list_image')%> </td>
        <td class="list_description"> 
          <dl>
            <dt> <%= product.title %> </dt>
            <dd> <%= truncate(strip_tags(product.description), length: 80)%> 
            </dd>
            <dd><strong>Model: </strong><%= product.brand.brand_name + " " + product.vehicle_model.model_name + " " + product.vehicle_model.year.to_s %>
            </dd>
          </dl>
        </td>

        <td>
          <%= link_to 'Show', product %><br/>
          <% if current_user.role == "admin" %>
          <%= link_to 'Edit', edit_product_path(product) %><br/>
          <%= link_to 'Remove', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <% if current_user.role == "seller" %>
          <br/><%= link_to 'Modify Stock', mod_stock_path(:seller_id => current_user.seller.id, :product_id => product.id), method: :post %>
          <% end %>
        </td>
        <td>
          <%= "US$" + product.price.to_s %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
