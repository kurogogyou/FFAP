<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :brand_id %><br>
    <%= f.select :brand_id, get_all_brand_names_ids, prompt: 'Select brand' %>
  </div>
  <div class="field">
    <%= label_tag :model %><br>
    <%= select_tag :model, options_for_select(get_all_model_names), prompt: 'Select model'%>
  </div>
  <div class="field">
    <%= label_tag :year %><br>
    <%= select_tag :year, options_for_select(model_years), prompt: 'Select year'%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
