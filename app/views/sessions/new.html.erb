<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_for :user_session do |f| %>
    <fieldset>
      <legend>Please Log In</legend>
      <div>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password%>
      </div>
      <div>
        <%= f.submit "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
<p><strong> New User? <%= link_to 'Register', new_user_path %> </strong></p>
