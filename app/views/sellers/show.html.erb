<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<td> <%= image_tag(@seller.logo_url, class:'logo') %> </td>

<p>
  <strong>Name:</strong>
  <%= @seller.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @seller.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @seller.phone %>
</p>

<h2>
  <strong>Seller reviews</strong>
</h2>

<% @seller.reviews.each do |review| %>
   <p><%= review.title %></p>
   <p><%= review.body %></p>
   <p><%= review.user.username %><p>
   <p><%= "....." %></p>
<% end %>


<% if current_user %>
<h2>
  <strong>Write your review:</strong>
</h2>

<%= render :partial => 'reviews/form', :locals => { :seller => @seller } %>
<% end %>

<%= link_to 'Back', sellers_path %>
