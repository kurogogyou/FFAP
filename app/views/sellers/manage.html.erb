<div class="col-sm-6">
  <%= image_tag(@seller.logo_url, class:'logo') %>
</div>

<div class="col-sm-6">
  <h2 class="head">Seller Management Page</h2>
  <h3 class="m_3"><%= @seller.name %></h3>

  <p>
    <strong class="bold">Address:</strong>
    <%= @seller.address %>
  </p>

  <p>
    <strong class="bold">Phone:</strong>
    <%= @seller.phone %>
  </p>

  <div style="margin: 10px 0 20px;">
    <%= link_to 'Edit Seller Information', edit_seller_path(@seller), class: 'btn btn-default' %>
    <%= link_to 'List Stocks', stocks_path, class: 'btn btn-default' %>
  </div>

  <p>
    <strong class="bold">Deliveries carrying our stocks:</strong>
  </p>
  <% if @deliveries.empty? %>
  <p>Nothing to show.</p>
  <% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Invoice</th>
        <th>Customer</th>
        <th>Address</th>
        <th>Personnel</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @deliveries.each do |delivery| %>
        <tr>
          <td><%= delivery.order.invoice %></td>
          <td><%= delivery.order.name %></td>
          <td><%= delivery.order.address %></td>
          <td><%= delivery.user.username %></td>
          <td><%= link_to 'Track', mapa_path(:id => delivery.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</div>