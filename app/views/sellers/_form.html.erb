<div class="depot_form">
<%= form_for(@seller) do |f| %>
  <% if @seller.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@seller.errors.count, "error") %> prohibited this seller from being saved:</h2>

      <ul>
      <% @seller.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-sm-6">
    <div class="field form-group">
      <%= f.label :name, class: 'control-label' %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="field form-group">
      <%= image_tag(@seller.logo_url) if @seller.user_logo? %> <br>
      <%= f.file_field :user_logo, class: 'control-label' %>
      <%= f.hidden_field :user_logo_cache %>
    </div>
    <div class="field form-group">
      <%= f.label :address, class: 'control-label' %><br>
      <%= f.text_area :address, rows: 6, class: 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :phone, class: 'control-label' %><br>
      <%= f.text_field :phone, class: 'form-control' %>
    </div>
  </div>

  <div class="col-sm-6">
    <p>Please select store location on map</p>
    <div id="mapa"></div>
    <div class="field form-group">
      <%= hidden_field_tag :latitude %>
    </div>
    <div class="field form-group">
      <%= hidden_field_tag :longitude %>
    </div>
  </div>

  <div class="clearfix"></div>
  <div class="actions form-group">
    <%= f.submit "Save", class: 'btn' %>
  </div>
<% end %>
</div>
