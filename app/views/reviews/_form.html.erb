<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this feedback_review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, "Titulo", class: 'control-label' %><br>
    <%= f.text_field :title, size: 80, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :body, "Comentario", class: 'control-label' %><br>
    <%= f.text_area :body, rows: 5, cols: 100, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= hidden_field_tag :seller_id, seller.id %>
  </div>
  <div class="field form-group">
    <%= hidden_field_tag :user_id, current_user.id %>
  </div>
  <div class="field form-group">
    <%= f.label :rating, class: 'control-label' %><br>
    <%= f.number_field :rating, min: 0, max: 5, class: 'form-control', style: 'width: 100px; display: inline-block; vertical-align: text-bottom;' %> 
    <span> 
      <div style="display: inline-block; margin: 0 10px;">
        <p>
          <% 5.downto(1) do %>
            <span class="glyphicon glyphicon-star"></span>
          <% end %>
        </p>
        <span>Muy bueno</span>
      </div>

      <div style="display: inline-block; margin: 0 10px;">
        <p>
          <% 4.downto(1) do %>
            <span class="glyphicon glyphicon-star"></span>
          <% end %>
          <% empty_stars = 1 %>
          <% empty_stars.to_i.downto(1) do %>
            <span class="glyphicon glyphicon-star-empty"></span>
          <% end %>
        </p>
        <span>Bueno</span>
      </div>

      <div style="display: inline-block; margin: 0 10px;">
        <p>
          <% 3.downto(1) do %>
            <span class="glyphicon glyphicon-star"></span>
          <% end %>
          <% empty_stars = 2 %>
          <% empty_stars.to_i.downto(1) do %>
            <span class="glyphicon glyphicon-star-empty"></span>
          <% end %>
        </p>
        <span>Regular</span>
      </div>

      <div style="display: inline-block; margin: 0 10px;">
        <p>
          <% 2.downto(1) do %>
            <span class="glyphicon glyphicon-star"></span>
          <% end %>
          <% empty_stars = 3 %>
          <% empty_stars.to_i.downto(1) do %>
            <span class="glyphicon glyphicon-star-empty"></span>
          <% end %>
        </p>
        <span>Malo</span>
      </div>

      <div style="display: inline-block; margin: 0 10px;">
        <p>
          <span class="glyphicon glyphicon-star"></span>
          <% empty_stars = 4 %>
          <% empty_stars.to_i.downto(1) do %>
            <span class="glyphicon glyphicon-star-empty"></span>
          <% end %>
        </p>
        <span>Pesimo</span>
      </div>
    <span>
  </div> 
  <div class="actions form-group">
    <%= f.submit "Guardar", class: 'btn' %>
  </div>
<% end %>
